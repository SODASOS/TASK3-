#include <iostream>
#include <cmath> // для ceil

using namespace std;

int main() {
    double k, p, r;

    // Запрос ввод данных
    cout << "Введите размер кредита (k): ";
    cin >> k;
    cout << "Введите годовой процент по кредиту (p): ";
    cin >> p;
    cout << "Введите годовую прибыль (r): ";
    cin >> r;

    //  Проверка на корректность ввода (чтобы не было деления на 0 и т.п.)
    if (k <= 0 || p < 0 || r < 0) {
        cout << "Некорректные данные Кредит и прибыль должны быть положительными а процент  неотрицательным" << endl;
        return 1; // Завершаем с ошибкой
    }

    //Расчет годовой выплаты по процентам
    double interest_payment = k * (p / 100.0);

    //Проверка достаточно ли прибыли для покрытия процентов
    if (r <= interest_payment) {
        cout << "Предприниматель не сможет погасить кредит так как прибыль не покрывает даже проценты" << endl;
        return 0; // Завершаем программу
    }

     //Расчет необходимого времени
    int years = ceil(k / (r - interest_payment));



    // Вывод результатов
    cout << "Предприниматель сможет погасить кредит через << years << лет" << endl;


    return 0;
}
